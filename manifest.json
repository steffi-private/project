{
  "manifest_version": 2,
  "name": "Kanban Board for Thunderbird",
  "version": "1.0.0",
  "description": "A beautiful kanban board for managing tasks and projects within Thunderbird",
  "author": "Steffi",
  "applications": {
    "gecko": {
      "id": "kanban-board@thunderbird.extension",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Kanban Board",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "dist/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}